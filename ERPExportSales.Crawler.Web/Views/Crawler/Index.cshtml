@section Scripts{
    <!--{Html.RegisterMvcPagerScriptResource();}-->
    @Scripts.Render("~/bundles/home")
    <script type="text/javascript">
        Date.prototype.Format = function (fmt) { //author: meizz
            var o = {
                "M+": this.getMonth() + 1, //月份
                "d+": this.getDate(), //日
                "h+": this.getHours(), //小时
                "m+": this.getMinutes(), //分
                "s+": this.getSeconds(), //秒
                "q+": Math.floor((this.getMonth() + 3) / 3), //季度
                "S": this.getMilliseconds() //毫秒
            };
            if (/(y+)/.test(fmt)) fmt = fmt.replace(RegExp.$1, (this.getFullYear() + "").substr(4 - RegExp.$1.length));
            for (var k in o)
                if (new RegExp("(" + k + ")").test(fmt)) fmt = fmt.replace(RegExp.$1, (RegExp.$1.length == 1) ? (o[k]) : (("00" + o[k]).substr(("" + o[k]).length)));
            return fmt;
        }
        $(document).ready(function () {
            setInterval(function () {
                var now = (new Date().Format("MM/dd/yyyy hh:mm:ss")).toLocaleString();
                $('#current-time').text(now);
            }, 1000);
        })
        var currPage = 1;
        function search() {
            render();  // 渲染页面函数
        }
        var getContent = function (params, callback) {
            $.ajax({
                url: "/Crawler/GetContent",
                type: "post",
                dataType: "json",
                data: params,
                beforeSend: function (XMLHttpRequest) {
                    //alert('远程调用开始...'); 
                    $("#modal-default").modal('show');
                }, 
                complete: function (XMLHttpRequest, textStatus) {
                    // alert('远程调用成功，状态文本值：'+textStatus); 
                    $("#modal-default").modal('hide');
                }, 
                success: function (response) {
                    callback && callback(response);
                }
            });
        }
        var render = function () {
            var index = (currPage - 1) * 25;
            getContent({
                id: $("#txtKey").val(),
                pageIndex: index
            }, function (data) {
                var html = '';
                data = $.parseJSON(data);
                data = $.parseJSON(data);
                var content=data.Data
                $.each(content, function (i) {
                    html += "<tr>";
                    html += "<td>";
                    html += "<img  src=\"http://" + content[i].Img + "\" style=\"width:68px;length:68px\"/>"
                    html += "</td>";
                    html += "<td>";
                    html += content[i].ProductName;
                    html += "</td>";
                    html += "<td>";
                    html += content[i].Catalog;
                    html += "</td>";
                    html += "<td>";
                    html += content[i].Brand;
                    html += "</td>";
                    html += "<td>";
                    html += content[i].Spec;
                    html += "</td>";
                    html += "<td>";
                    html += content[i].Material;
                    html += "</td>";
                    html += "<td>";
                    html += content[i].Level;
                    html += "</td>";
                    html += "<td>";
                    html += content[i].SurfaceColor;
                    html += "</td>";
                    html += "<td>";
                    html += content[i].Store;
                    html += "</td>";
                    html += "<td>";
                    html += content[i].Stock;
                    html += "</td>";
                    html += "<td>";
                    html += content[i].Package;
                    html += "</td>";
                    html += "<td>";
                    html += content[i].Price;
                    html += "</td>";
                    html += "<td>";
                    html += content[i].DataSource;
                    html += "</td>";
                    html += "<td>";
                    html += content[i].UpdateTime;
                    html += "</td>";
                    html += "</tr>";
                });
                $("#tbOrdersBody").html(html);
                //setPaginator(data.page, Math.ceil(data.total / data.size), render);
                setPaginator(currPage, Math.ceil(data.Total / 25), render);
            });
        };
        var setPaginator = function (pageCurr, pageSum, callback) {
            $('.pagination').bootstrapPaginator({ // 这个方法调用时，自动在.pagination添加分页li
                /*当前使用的是3版本的bootstrap*/
                bootstrapMajorVersion: 3,
                /*配置的字体大小是小号*/
                size: 'normal',
                /*当前页*/
                currentPage: pageCurr,
                /*一共多少页*/
                totalPages: pageSum,
                /*页面上最多显示几个含数字的分页按钮*/
                numberOfPages: 20,
                /*设置显示的样式，默认是箭头	*/
                itemTexts: function (type, page, current) {
                    switch (type) {
                        case "first":
                            return "首页";
                        case "prev":
                            return "上一页";
                        case "next":
                            return "下一页";
                        case "last":
                            return "末页  " + current + "/" + pageSum;
                        case "page":
                            return page;
                    }
                },
                onPageClicked: function (event, originalEvent, type, page) {
                    currPage = page; // 注意currPage的作用域
                    callback && callback();
                }
            });
        }
    </script>
}


