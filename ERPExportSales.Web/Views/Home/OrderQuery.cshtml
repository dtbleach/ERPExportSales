@model IList<ERPExportSales.Web.Models.OrderViewModel>
<div id="divOrders">
<div class="pull-right">
    @Ajax.ActionLink("Previous", "OrderQuery", "Home", new { pageNum = ViewBag.PageNum - 1, IsBtnQuery=false }, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "divOrders",OnBegin = "$('#divOrders').fadeOut('slow')", OnComplete = "$('#divOrders').fadeIn('slow')", LoadingElementId = "loadingDiv" }, new { @class = "btn btn-default" })
    @Ajax.ActionLink("Next", "OrderQuery", "Home", new { pageNum = ViewBag.PageNum + 1, IsBtnQuery = false }, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "divOrders", OnBegin = "$('#divOrders').fadeOut('slow')", OnComplete = "$('#divOrders').fadeIn('slow')", LoadingElementId = "loadingDiv" }, new { @class = "btn btn-default" })
</div>

<table id="tbOrders" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
    <thead>
        <tr role="row">
            <th>PO No.</th>
            <th>Sc No.</th>
            <th>Amount</th>
            <th>ETD</th>
            <th>Progess</th>
            <th>客户ID</th>
            <th>销售员</th>
            <th>制单人</th>
            <th>Weight (kg)</th>
            <th>Invoice No.</th>
            <th>Packing List</th>
            <th>BL Copy</th>
            <th>Quality Report</th>
        </tr>

    </thead>
    <tbody id="tbOrdersBody">
        @foreach (var item in Model)
        {
            <tr role="row">
                <td class="sorting_1">@item.PONo</td>
                <td>@item.SCNo</td>
                <td>@item.Amount</td>
                <td>@item.ETD</td>
                <td>@item.Progress</td>
                <td>@item.CustomerID</td>
                <td>@item.Sales</td>
                <td>@item.Maker</td>
                <td>@item.Weight</td>
                <td>@item.InvoiceNo</td>
                <td>@item.PackingList</td>
                <td>@item.BLCopy</td>
                <td>@item.QualityReport</td>
            </tr>
        }
    </tbody>
</table>
<div class="pull-right">
    @Ajax.ActionLink("Previous", "OrderQuery", "Home", new { pageNum = ViewBag.PageNum - 1, IsBtnQuery = false }, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "divOrders", OnBegin = "$('#divOrders').fadeOut('slow')", OnComplete = "$('#divOrders').fadeIn('slow')", LoadingElementId = "loadingDiv" }, new { @class = "btn btn-default" })
    @Ajax.ActionLink("Next", "OrderQuery", "Home", new { pageNum = ViewBag.PageNum + 1, IsBtnQuery = false }, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "divOrders", OnBegin = "$('#divOrders').fadeOut('slow')", OnComplete = "$('#divOrders').fadeIn('slow')", LoadingElementId = "loadingDiv" }, new { @class = "btn btn-default" })
</div>
    </div>
